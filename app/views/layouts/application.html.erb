<!DOCTYPE html>
<html>
  <head>
    <title>WdiProject1</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <a class="brand" id="home" <% if request.path != '/' %>  href="/" <% end %> >GameStats</a>
            <div class="everything" >
              <% if current_user %>
                <ul class="nav">
                  <li><a href="/games">Games</a></li>
                  <li><a href="/account">Account</a></li>
                </ul>
                <form class="navbar-search pull-left">
                  <input type="text" class="search-query" placeholder="Search">
                </form>
                <a class="btn pull-right" id="logout-btn" href="logout">Log out</a>
              <% else %>
                <form class="navbar-form pull-right" accept-charset="UTF-8" method="post" action="/login">
                  <input name="_method" type="hidden" value="put" />
                  <input type ="text"      name="email"     placeholder="enter your email"    >
                  <input type ="password"  name="password"  placeholder="enter your password" >
                  <button type ="submit"   class="btn"     >Log In</button>
                </form>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </header>

    <%= yield %>

  </body>
</html>


