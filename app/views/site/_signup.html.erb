<%= form_for(@user) do |f| %>
  <div>
    <%= f.label :email, "Email Address" %>:<br>
    <%= f.text_field :email %>
  </div><br>
  <div>
    <%= f.label :password %>:
    <%= f.password_field :password %><br>
  </div><br>
  <div>
    <%= f.label :password_confirmation, "Confirm Password" %>:
    <%= f.password_field :passsword_confirmation %>
  </div><br>
  <div>
    <%= f.submit (@user.new_record? ? "Sign up" : "Update") %>
  </div>
<% end %>
